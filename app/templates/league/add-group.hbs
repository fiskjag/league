<div class="container" role="main">
	<ol class="breadcrumb">
		<li>
			{{#link-to 'index'}}Sweco League{{/link-to}}
		</li>
		<li>
			{{#link-to 'league' league}}{{league.year}}{{/link-to}}
		</li>
	</ol>
	<div class="panel panel-default">
		<div class="panel-heading">Skapa grupp för år {{league.year}}</div>
		<div class="panel-body">
			<div class="input-group">
				{{input type="text" class="form-control" placeholder="Gruppnamn" value=name }}
				<span class="input-group-btn">
					<button class="btn btn-default" type="button" {{action "createGroup"}}>Skapa</button>
				</span>
			</div>
		</div>
	</div>
</div>