<div>
	<table class="table">
		<thead>
            <tr>
    			<th>Lag</th>
                <th>Matcher</th> 
                <th>Segrar</th>
                <th>Oavgjorda</th>
                <th>Förluster</th>
                <th>Gjorda mål</th>
                <th>Insläppta mål</th>
                <th>Målskillnad</th>
                <th>Poäng</th>
            </tr>
        </thead>
        <tbody>
    		{{#each sortedTeams as |team|}}
            <tr>
            	<td>{{team.name}}</td>
                <td>{{team.gamesplayed}}</td> 
                <td>{{team.wins}}</td>
                <td>{{team.ties}}</td>
                <td>{{team.losses}}</td>
                <td>{{team.goalsscored}}</td>
                <td>{{team.goalsagainst}}</td>
                <td>{{team.goaldiff}}</td>
                <td>{{team.points}}</td>
    		</tr>
    		{{/each}}
		</tbody>
	</table>
</div>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>Datum</th>
                <th>Hemma</th>
                <th>Borta</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each matches as |match|}}
            <tr>
                <td>{{match.date}}</td>                
                <td>{{match.hometeam}}</td>
                <td>{{match.awayteam}}</td>
                <td>{{match.homegoals}}</td>
                <td>{{match.awaygoals}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

