<ol class="breadcrumb">
    <li>
        {{#link-to 'index'}}Sweco League{{/link-to}}
    </li>
    <li>
        {{#link-to 'league' league}}{{league.year}}{{/link-to}}
    </li>
    <li>
        {{#link-to 'league.group' group}}{{group.name}}{{/link-to}}
    </li>
</ol>

<div>
	<table class="table">
		<thead>
            <tr>
    			<th>Lag</th>
                <th>Matcher</th> 
                <th>Segrar</th>
                <th>Oavgjorda</th>
                <th>Förluster</th>
                <th>Gjorda mål</th>
                <th>Insläppta mål</th>
                <th>Målskillnad</th>
                <th>Poäng</th>
            </tr>
        </thead>
        <tbody>
    		{{#each sortedTeams as |team|}}
            <tr>
            	<td>{{team.name}}</td>
                <td>{{team.gamesplayed}}</td> 
                <td>{{team.wins}}</td>
                <td>{{team.ties}}</td>
                <td>{{team.losses}}</td>
                <td>{{team.goalsscored}}</td>
                <td>{{team.goalsagainst}}</td>
                <td>{{team.goaldiff}}</td>
                <td>{{team.points}}</td>
    		</tr>
    		{{/each}}
		</tbody>
	</table>
</div>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>Datum</th>
                <th>Hemma</th>
                <th></th>
                <th>Borta</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each matches as |match|}}
            <tr>
                <input type="text" class="form-control" value={{match.dateInfo}}>               
                <td>{{match.hometeam}}</td>
                <td>-</td>
                <td>{{match.awayteam}}</td>
                <input type="text" class="form-control" value={{match.homegoals}}>
                <td>-</td>
                <input type="text" class="form-control" value={{match.awaygoals}}>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

{{outlet}}